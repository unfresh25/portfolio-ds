<section>
    <div class="fixed w-full h-full bg-[url('img/bg.png')] z-[-1] bg-2x"/>
    <div class="absolute w-60 h-60 z-[-2] bg-[#f8f3ea] rounded-full opacity-30 blur-3xl" id="hero-glow"/>
</section>

<script>
    document.addEventListener('DOMContentLoaded', () => {
      let circle = document.getElementById('hero-glow');
      
      const onMouseMove = (e: MouseEvent) => {
        if (circle) {
          let centerX = e.pageX - (circle.offsetWidth / 2);
          let centerY = e.pageY - (circle.offsetHeight / 2);
          
          circle.style.left = centerX + 'px';
          circle.style.top = centerY + 'px';
        }
      };
      
      document.addEventListener('mousemove', onMouseMove);
    });
</script>